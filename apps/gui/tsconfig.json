{
    "extends": "@repo/typescript-config/internal-package.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "ES2022"],
        "jsx": "preserve",
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
